%% -*- tab-width: 4;erlang-indent-level: 4;indent-tabs-mode: nil -*-
%% ex: ts=4 sw=4 et
{sys, [
       {lib_dirs, ["../deps", "../apps"]},
       {rel, "koala", "0.0.1",
        [
         kernel,
         stdlib,
         sasl,
         cowboy,
         jiffy,
         koala
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "koala"},
       {profile, embedded},
       {excl_sys_filters, ["^bin/.*",
                           "^erts.*/bin/(dialyzer|typer)"]},
       {excl_archive_filters, [".*"]},
       {app, sasl, [{incl_cond, include}]},
       {app, lager, [{incl_cond, include}]},
       {app, koala, [{incl_cond, include}]}
      ]}.


{target_dir, "koala"}.

{overlay_vars, "vars.config"}.

{overlay, [
           %% Scan for scripts in included apps
           %% Setup basic dirs
           {mkdir, "log"},
           {mkdir, "data/koala"},

           %% Copy base files for starting and interacting w/ node
           {copy, "../deps/node_package/priv/base/erl",
            "{{erts_vsn}}/bin/erl"},
           {copy, "../deps/node_package/priv/base/nodetool",
            "{{erts_vsn}}/bin/nodetool"},
           {template, "../deps/node_package/priv/base/runner",
            "bin/koala"},
           {template, "../deps/node_package/priv/base/env.sh",
            "lib/env.sh"},

           %% Copy config files
           {template, "files/app.config", "etc/app.config"},
           {template, "files/vm.args", "etc/vm.args"},
          ]}.